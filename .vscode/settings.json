{
    "swift.buildArguments": [],
    "swift.autoGenerateLaunchConfigurations": false,

    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    "files.associations": {
        "*.swift": "swift"
    },
    "files.exclude": {
        "**/.build": true,
        "**/.swiftpm": true,
        "**/DerivedData": true,
        "**/*.xcuserstate": true
    },

    "[swift]": {
        "editor.defaultFormatter": "swiftlang.swift-vscode",
        "editor.tabSize": 4
    },

    "search.exclude": {
        "**/.build": true,
        "**/.swiftpm": true,
        "**/DerivedData": true
    }
}
